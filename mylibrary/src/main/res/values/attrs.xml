<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HView">
        <attr name="visibleItemCount" format="integer"></attr>
        <attr name="selectItemTextSize" format="float"></attr>
        <attr name="selectItemTextColor" format="color|reference"></attr>
        <attr name="ItemTextSize" format="float"></attr>
        <attr name="ItemTextColor" format="color|reference"></attr>
    </declare-styleable>

    <attr name="defaultColor" format="color"></attr>
    <attr name="cirRadius" format="dimension"></attr>
    <attr name="cycleTime" format="integer"></attr>

    <declare-styleable name="LikeView">
        <attr name="defaultColor" />
        <attr name="cirRadius" />
        <attr name="cycleTime" />
    </declare-styleable>
    <declare-styleable name="SelectView">
        <attr name="visibleCount" format="integer"></attr>
        <attr name="selectSize" format="dimension"></attr>
        <attr name="selectColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="textColor" format="color"></attr>

    </declare-styleable>
</resources>